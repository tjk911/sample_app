<% provide(:title, @user.name) %>
<div class="row">
	<aside class="large-4 medium-4 columns">
		<section>
			<h1>
			  <%= gravatar_for @user %>
			  <%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="large-8 medium-8 columns">
		<% if @user.microposts.any? %>
			<%= foundation_paginate @microposts %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
				<ol class="microposts">
					<%= render @microposts %>
				</ol>
			<%= foundation_paginate @microposts %>
		<% end %>
	</div>
</div>